{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node10",
    "declaration": true,        
    "isolatedModules": true,
    "outDir": "dist",                          
    "declarationMap": true,
    "sourceMap": true,             
    "declarationDir": "./dist",   
    "emitDeclarationOnly": true,        
    "skipLibCheck": true,
    "allowJs": false,                          
    "resolveJsonModule": true,                 
    "baseUrl": ".",                             
    "paths": {
      "@/*": ["src/*"]                         
    }
  },
  "include": ["src"],                       
  "exclude": ["node_modules", "dist"]            
}
